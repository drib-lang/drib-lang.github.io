---
import drib from "../assets/drib-logo.svg?url";
import github from "../assets/github.svg?url";
import twitter from "../assets/twitter-x.svg?url";
---

<div class="container-fluid">
    <div class="row">
        <div class="col d-flex align-items-center justify-content-center">
            <a
                href="https://twitter.com/driblang"
                target="_blank"
                rel="noopener"
                class="me-4"
            >
                <img src={twitter} alt="Twitter/X logo" width="32" />
            </a>
            <a
                href="https://github.com/drib-lang"
                target="_blank"
                rel="noopener"
            >
                <img src={github} alt="GitHub logo" width="32" />
            </a>
        </div>
        <div class="col d-flex align-items-center justify-content-center">
            <img src={drib} alt="Drib logo" width="80" /><br />
        </div>
    </div>

    <div class="row">
        <div class="col d-flex align-items-center justify-content-center">
            <span
                >&copy; {new Date().getFullYear()} The Drib Programming Language</span
            >
        </div>
    </div>
</div>

<style>
    .container-fluid {
        height: 220px;
        background-color: var(--color-white);

        .row {
            height: 50%;
        }
    }
</style>
