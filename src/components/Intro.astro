---
import dribLogo from "../assets/drib-logo.svg?url";
---

<div class="container height-450">
    <div class="row d-flex align-items-center height-450">
        <div class="col-12 col-md-6 d-flex justify-content-center">
            <img class="logo" src={dribLogo} alt="Drib logo" />
        </div>

        <div
            class="col-12 col-md-6 d-flex justify-content-start text-center text-md-start"
        >
            <h1>The Drib Programming Language</h1>
        </div>
    </div>
</div>

<div class="container height-450">
    <div class="row d-flex align-items-center">
        <div
            class="col-12 col-md-6 d-flex justify-content-center text-center text-md-start"
        >
            <h1>Familiar Syntax</h1>
        </div>

        <div class="col-12 col-md-6 d-flex justify-content-start text-md-start">
            <div class="card">
                <div class="card-body pb-0">
                    <span class="keyword">val</span>
                    <span class="function">sum</span>
                    <span class="operator">=</span>
                    <span class="keyword">fun</span>
                    <span class="brace">(</span><span>x</span><span>,</span>
                    <span>y</span><span class="brace">)</span>
                    <span class="brace">&#123;</span>
                </div>
                <div class="card-body py-0">
                    <span>&nbsp;&nbsp;</span><span class="keyword">return</span>
                    <span>x</span>
                    <span class="operator">+</span>
                    <span>y</span>;
                </div>
                <div class="card-body py-0">
                    <span class="brace">&#125;</span>;
                </div>
                <div class="card-body py-0">&nbsp;</div>
                <div class="card-body py-0">
                    <span class="keyword">val</span>
                    <span>a</span>
                    <span class="operator">=</span>
                    <span class="function">sum</span><span class="brace">(</span
                    ><span>40</span><span>,</span>
                    <span>2</span><span class="brace">)</span>;
                </div>
                <div class="card-body pt-0">
                    <span class="function">print</span><span class="brace"
                        >(</span
                    ><span class="string">"I found the answer!"</span><span
                        class="brace">)</span
                    >;
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid height-300">
    <div class="row d-flex align-items-center">
        <div class="col-12 d-flex justify-content-center">
            this is an example
        </div>
    </div>
    <div class="row d-flex align-items-center">
        <div class="col-12 d-flex justify-content-center">
            <button type="button" class="btn btn-primary">Get started</button>
        </div>
    </div>
</div>

<style>
    .height-450 {
        height: 450px;

        .row {
            height: 100%;
        }
    }

    .height-300 {
        height: 120px;

        .row {
            height: 50%;
        }

        button {
            border-radius: 26px;
            border: none;
            height: 52px;
            width: 170px;

            background: linear-gradient(
                to right,
                var(--ctp-mocha-sapphire),
                var(--ctp-mocha-mauve)
            );
        }

        button:hover {
        }
    }

    .logo {
        height: 140px;
        max-width: auto;
        -webkit-transform: scaleX(-1);
        transform: scaleX(-1);
        filter: invert(65%) sepia(50%) saturate(563%) hue-rotate(191deg)
            brightness(96%) contrast(94%);
    }

    h1 {
        font-weight: 300;
        font-size: 3rem;
        font-family: "Montserrat", sans-serif;
        background: linear-gradient(
            to right,
            var(--ctp-mocha-sapphire),
            var(--ctp-mocha-mauve)
        );
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
        text-fill-color: transparent;
        background-size: 100% auto;
    }

    .card {
        width: 100%;
        background-color: var(--ctp-mocha-mantle);
        font-family: "JetBrains Mono", monospace;
        color: var(--ctp-mocha-subtext1);
    }

    .brace {
        color: var(--ctp-mocha-red);
    }

    .keyword {
        color: var(--ctp-mocha-mauve);
    }

    .function {
        color: var(--ctp-mocha-blue);
        font-style: italic;
    }

    .operator {
        color: var(--ctp-mocha-sky);
    }

    .string {
        color: var(--ctp-mocha-green);
    }
</style>
