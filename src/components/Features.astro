---
import "bootstrap-icons/font/bootstrap-icons.css";
---

<div class="container-fluid d-flex align-items-center">
    <div class="row mt-4">
        <div
            class="col-12 col-md-6 mb-4 d-flex flex-column justify-content-center align-items-center px-4 py-0"
        >
            <a class="text-center py-0" href="https://github.com/drib-lang/">
                <i class="bi bi-github"></i>
                GitHub
            </a>
        </div>
        <div
            class="col-12 col-md-6 mb-4 d-flex flex-column justify-content-center align-items-center px-4 py-0"
        >
            <a class="text-center" href="https://github.com/drib-lang/adi">
                <i class="bi bi-filetype-py"></i>
                Interpreter
            </a>
        </div>
        <div
            class="col-12 col-md-6 mb-4 d-flex flex-column justify-content-center align-items-center px-4 py-0"
        >
            <a class="text-center" href="./docs">
                <i class="bi bi-book"></i>
                Docs
            </a>
        </div>
        <div
            class="col-12 col-md-6 mb-4 d-flex flex-column justify-content-center align-items-center px-4 py-0"
        >
            <a
                class="text-center py-0"
                href="https://github.com/drib-lang/adi/tree/main/examples"
            >
                <i class="bi bi-file-code"></i>
                Examples
            </a>
        </div>
    </div>
</div>

<style>
    .container-fluid {
        min-height: 30vh;
        min-height: 30svh;
        min-height: calc(var(--vh, 1vh) * 30);
        background-color: var(--color-white);
    }

    h1 {
        color: var(--color-main);
    }

    p {
        color: var(--color-black);
    }

    .row {
        width: 50%;
        margin: 0 auto;
    }

    a {
        text-decoration: none;
        color: var(--color-black);
        font-size: 1.2rem;
    }

    a:visited,
    a:hover,
    a:active {
        color: var(--color-black);
        text-decoration: none;
    }
</style>
